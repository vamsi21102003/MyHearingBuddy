{
  "expo": {
    "name": "MyHearingBuddy",
    "slug": "myhearingbuddy",
    "version": "1.0.0",
    "orientation": "portrait",
    "icon": "./assets/icon.png",
    "userInterfaceStyle": "light",
    "splash": {
      "image": "./assets/splash.png",
      "resizeMode": "contain",
      "backgroundColor": "#F8FBFF"
    },
    "assetBundlePatterns": [
      "**/*"
    ],
    "ios": {
      "supportsTablet": true,
      "infoPlist": {
        "NSCameraUsageDescription": "MyHearingBuddy needs camera access to detect sign language gestures.",
        "NSMicrophoneUsageDescription": "MyHearingBuddy needs microphone access for voice features."
      }
    },
    "android": {
      "adaptiveIcon": {
        "foregroundImage": "./assets/adaptive-icon.png",
        "backgroundColor": "#F8FBFF"
      },
      "permissions": [
        "android.permission.CAMERA",
        "android.permission.RECORD_AUDIO",
        "android.permission.MODIFY_AUDIO_SETTINGS"
      ],
      "package": "com.yourcompany.myhearingbuddy"
    },
    "web": {
      "favicon": "./assets/favicon.png"
    },
    "plugins": [
      [
        "expo-camera",
        {
          "cameraPermission": "Allow MyHearingBuddy to access your camera to detect sign language gestures."
        }
      ],
      [
        "expo-av",
        {
          "microphonePermission": "Allow MyHearingBuddy to access your microphone for voice features."
        }
      ],
      "react-native-vision-camera"
    ],
    "extra": {
      "eas": {
        "projectId": "your-project-id-here"
      }
    }
  }
}
